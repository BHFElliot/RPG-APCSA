import java.util.Scanner;

public class Main {

	static Scanner in = new Scanner(System.in);
	
	public static void main(String[] args) {
		System.out.println("Hi! Thank you for playing rpg");
		Player player = characterCreate();
		System.out.println();
		
	}
	
	public static Player characterCreate() {
		System.out.println("What would you like your character's name to be?");
		String tempName = in.nextLine();
		System.out.println("What gender would you like your character to be? M/F/O");
		char tempGender = in.nextLine().charAt(0);
		return new Player(tempName,tempGender);
	}

}
